<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Calories Remaining: 0"
            android:layout_width="360dp"
            android:layout_height="54dp"
            android:id="@+id/textView1"
            android:textAppearance="@style/TextAppearance.AppCompat" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="52dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp" app:layout_constraintStart_toStartOf="parent"
            android:textSize="28dip"
            android:layout_marginLeft="26dp" android:layout_marginStart="26dp"
            app:layout_constraintHorizontal_bias="1.0"/>

    <!--text to display the total calories -->
    <TextView
            android:text="Total Calories: 0"
            android:layout_width="360dp"
            android:layout_height="54dp"
            android:id="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="60dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp" app:layout_constraintHorizontal_bias="1.0"
            android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="28dip"/>

    <!--button to add food items-->
    <Button
            android:text="Add Food Item"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:id="@+id/addfood"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:layout_marginRight="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <!--list view of food items -->
    <ListView
            android:layout_width="355dp"
            android:layout_height="379dp"
            android:id="@+id/foodsConsumedList" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView1" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="CALL US"
            android:onClick="phone"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="18sp"/>
    <Button
            android:text="WEBSITE"
            android:onClick="web"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="18sp"/>
    <Button
            android:text="Calories Shortcuts"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/reference"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>


</android.support.constraint.ConstraintLayout>