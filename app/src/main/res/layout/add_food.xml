<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/caloriesRemainingDisplay">

    <!--text lable for the food textbox -->
    <TextView
            android:layout_width="165dp"
            android:textSize="28dip"
            android:layout_height="45dp"
            android:id="@+id/textView3" android:text="Food:"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="128dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp"/>
    <EditText
            android:layout_width="124dp"
            android:layout_height="44dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/itemCalories"
            android:layout_marginLeft="39dp" android:layout_marginStart="39dp"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="45dp" android:layout_marginRight="45dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="180dp" app:layout_constraintBottom_toTopOf="@+id/addFood"/>
    <TextView
            android:text="Calories:"
            android:layout_width="169dp"
            android:textSize="28dip"
            android:layout_height="41dp"
            android:id="@+id/textView4"
            android:layout_marginBottom="180dp"
            app:layout_constraintBottom_toTopOf="@+id/addFood" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp"/>
    <EditText
            android:layout_width="119dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/itemName"
            android:layout_marginLeft="21dp" android:layout_marginStart="21dp"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginRight="50dp"
            app:layout_constraintHorizontal_bias="0.444"/>
    <!--button to submit the food item -->
    <Button
            android:text="Add"
            android:layout_width="167dp"
            android:layout_height="70dp"
            android:id="@+id/addFood"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="112dp"
            android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="140dp"
            android:layout_marginStart="140dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="140dp" android:layout_marginRight="140dp"
            android:textStyle="bold" android:textSize="30sp"/>


</android.support.constraint.ConstraintLayout>